<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adapter_poiitem_clyt_itemlayout"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical">


    <Button
        android:id="@+id/include_choose_onmap_btn_confirm"
        android:layout_width="80dp"
        android:layout_height="33dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp"
        android:background="@drawable/public_button_radius_purplish_red"
        android:text="确定"
        android:textColor="@color/WHITE"
        android:visibility="invisible"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/include_choose_onmap_tv_placename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:textColor="@color/MAIN_TEXT_COLOR"
            android:textSize="16dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/include_choose_onmap_tv_placename"
            android:layout_marginLeft="32dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/include_choose_onmap_tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/MAIN_TEXT_LIGHT_COLOR"
                android:textSize="13dp"/>


            <TextView
                android:id="@+id/include_choose_onmap_tv_floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/MAIN"
                android:textSize="14dp"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>