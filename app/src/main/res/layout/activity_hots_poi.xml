<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/activity_path_plan_ablyt_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/MAIN"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/transparent"
            app:elevation="0dp"
            app:theme="@style/Base.ThemeOverlay.AppCompat.Dark">
            <!--app:navigationIcon="@drawable/ic_indoor_back"-->


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="19dp">

                <LinearLayout
                    android:id="@+id/activity_hots_poi_et_searchlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_grey_radius_stroke"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="11dp"
                        android:background="@drawable/ic_indoor_search"/>

                    <TextView
                        android:id="@+id/activity_hots_poi_tv_searchtext"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="支持在室内搜索"/>


                </LinearLayout>

            </LinearLayout>

            <!--热门-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="热门"
                android:textColor="@color/MAIN_TEXT_COLOR"
                android:textSize="15dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="9dp"
                android:background="@color/BG_LINE_LIGHT_GREY"/>

            <LinearLayout
                android:id="@+id/activity_hots_poi_llyt_hots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <!--服务-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="服务"
                android:textColor="@color/MAIN_TEXT_COLOR"
                android:textSize="15dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="9dp"
                android:background="@color/BG_LINE_LIGHT_GREY"/>

            <LinearLayout
                android:id="@+id/activity_hots_poi_llyt_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <!--设施-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="设施"
                android:textColor="@color/MAIN_TEXT_COLOR"
                android:textSize="15dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="9dp"
                android:background="@color/BG_LINE_LIGHT_GREY"/>

            <LinearLayout
                android:id="@+id/activity_hots_poi_llyt_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>


















        </LinearLayout>
    </ScrollView>




</LinearLayout>

