<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data class = "PoiInDoorSearchActivityBinding">

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#cfffffff"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/activity_navigationmap_et_searchtext"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="室内搜索"
                android:maxLines="1"
                android:padding="5dp"/>

            <Button
                android:id="@+id/activity_poi_indoor_search_btn_startsearch"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="搜索"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_poi_indoor_search_rv_mapinfolist"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:background="#CCFFFFFF"
            android:cacheColorHint="#00000000"
            android:fadingEdge="none"
            android:scrollbars="none"/>

    </LinearLayout>

</layout>