<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adapter_poiitem_clyt_itemlayout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">



    <ImageView
        android:id="@+id/adapter_poiitem_iv_startnavigation"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/a10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/adapter_poiitem_tv_placename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/adapter_poiitem_iv_startnavigation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/adapter_poiitem_tv_distance"
        />

    <TextView
        android:id="@+id/adapter_poiitem_tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adapter_poiitem_tv_placename"
        android:maxLength="14"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <TextView
        android:layout_marginLeft="20dp"
        android:id="@+id/adapter_poiitem_tv_floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#10A9EC"
        app:layout_constraintLeft_toRightOf="@+id/adapter_poiitem_tv_distance"
        app:layout_constraintTop_toBottomOf="@id/adapter_poiitem_tv_placename"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>