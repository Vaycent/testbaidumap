<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vaycent.testbaidumap.ChooseOnMapActivity"
    >

    <RelativeLayout
        android:id="@+id/activity_choose_on_map_rlyt_root"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <com.baidu.mapapi.map.MapView
            android:id="@+id/activity_choose_on_map_mv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <vaycent.testbaidumap.widget.FloorsList
            android:id="@+id/activity_choose_on_map_fl_floors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="17dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/include_choose_on_map_bottomlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <include layout="@layout/include_choose_on_map_bottominfo"/>

    </RelativeLayout>

</LinearLayout>
