<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/activity_indoor_search_btn_indoorsearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="搜索"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/activity_indoor_search_btn_indoorsearch"
            android:orientation="vertical">

            <EditText
                android:id="@+id/activity_indoor_search_et_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的位置">

                <!--<requestFocus />-->
            </EditText>


            <EditText
                android:id="@+id/activity_indoor_search_et_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="肯德基">
            </EditText>

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/viewStub"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"/>

    </RelativeLayout>

</LinearLayout>